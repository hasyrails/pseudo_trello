<!DOCTYPE html>
<html>
  <head>
    <title>PseudoTrello</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <% if current_user.present? %>
        <%= render 'partial/login_header' %>
      <% else %>
        <%= render 'partial/logout_header' %>
      <% end %>
    </header>

    <div>
      <%= render 'layouts/flash_messages' %>
    </div>

    <div class="contents">
      <%= yield %>
    </div>

  </body>
</html>
