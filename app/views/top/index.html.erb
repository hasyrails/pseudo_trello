<div class="top-page">
  <div class="list-wrapper">
    <% @lists.each do |list| %>
      <div class="list">
        <div class="list-header">
          <h2 class="list-header-title"><%= list.title %></h2>
          <div class="list-header-action">
            <%= link_to content_tag(:i, '', class: 'fas fa-trash'), list, method: :delete, data: {confirm: "#{list.title}を削除してよろしいですか？"} %>
            <%= link_to(content_tag(:i, '', class: 'fas fa-pen'), edit_list_path(list)) %>
          </div>
        </div>

        <div class="card-wrapper">
          <% list.cards.each do |card| %>
            <%= link_to list_card_path(list, card), class: 'card-show-link' do %>
            <div class="card">
              <h3 class="card-titile"><%= card.title %></h3>
              <% if card.memo.size > 0 %>
                <div class="card-detail is-exist"><i class="fas fa-bars"></i></div>
              <% end %>
            </div> 
            <% end %>
          <% end %>

          <div class="add-card">
            <i class="far fa-plus-square"></i> 
            <%= link_to 'カードを追加する', new_list_card_path(list), class: 'add-card-link' %>
          </div>
        </div>

      </div>
    <% end %>
  </div>
</div>
