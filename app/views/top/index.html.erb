<div class="top-page">
  <div class="list-wrapper">
    <% @lists.each do |list| %>
      <div class="list">
        <div class="list-header">
          <h2 class="list-header-title"><%= list.title %></h2>
          <div class="list-header-action">
            <%= link_to content_tag(:i, '', class: 'fas fa-trash'), list, method: :delete, data: {confirm: "#{list.title}を削除してよろしいですか？"} %>
            <%= link_to(content_tag(:i, '', class: 'fas fa-pen'), edit_list_path(list)) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
